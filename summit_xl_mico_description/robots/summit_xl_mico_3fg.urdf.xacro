	<!-- Fix arm to robot base platform -->
	<joint
	  name="j_base_arm"
      type="fixed">
    <origin
      xyz="0.200 0.0 0.100"
      rpy="0.0 0.0 0.0" />
    <parent
      link="base_link" />
    <child
      link="mico_link_base" />
    <axis
      xyz="0 0 0" />
  </joint>

